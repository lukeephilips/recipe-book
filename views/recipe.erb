<div class="panel panel-default">
  <div class="panel-body">
    <div class="recipe_header">
      <h1><%= @recipe.title %></h1>
      <span><b>Cook time:</b> <%= @recipe.cook_time %>,</span>
      <span><b>Servings:</b> <%= @recipe.servings %>,</span>
      <span><b>Rating:</b> <%= @recipe.rating %>,</span>
      <span><b>Spiceness level:</b> <% @recipe.spice.times do |img| %>
          <img src="/img/pepper.png" alt="pepper" class="pepper"/>
        <% end %>
      </span>
    </div><br>
    <% if @recipe.lists%>
    <h3>Ingredients</h3><hr>
    <% @recipe.lists.each do |list| %>
    <div class="recipe">
      <ul>
        <li><p><%= list.amount %> <%= list.unit %> of <%= list.ingredient.name %><p></li>
      </ul>
    </div>
    <% end %>
    <% end %>
    <% if @recipe.instructions%>



    <h3>Instructions</h3><hr>
    <% @recipe.instructions.each do |instruction| %>
    <div class="recipe">
      <ol>
        <li><p><%= instruction.description %></p></li>
      </ol>
    </div>
    <% end %>
    <% end %>
    </div>
  </div>

<a class="btn-warning btn" href="/recipe/<%=@recipe.id %>/edit">Edit this recipe</a>
